<div class="page-header">
  <h1>Forgot your password?</h1>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-group forgot-form">
    <%= f.label :email, class: "sr-only", for: "email" %><br />
    <%= f.email_field :email, autofocus: true, type: "email", class: "form-control", id: "email", placeholder: "Enter email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
