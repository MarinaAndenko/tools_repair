<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-inline") do |f| %>

  <div class="form-group">
    <%= f.label :email, class: "sr-only" for: "email" %><br />
    <%= f.email_field :email, autofocus: true, type: "email", class: "form-control", id: "email", placeholder: "Enter email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "sr-only", for: "pwd" %>
    <%= f.password_field :password, autocomplete: "off", type: "password" class: "form-control", id:"pwd", placeholder: "Enter password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>


