<%- model_class = Repair -%>
<div class="page-header">
  <h1 class='title-with-button'><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1> <%= link_to t('.new', :default => t("helpers.links.new")),
            new_repair_path,
            :class => 'btn btn-primary new-record-button' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:duration) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= link_to repair.id, repair_path(repair) %></td>
        <td><%= repair.name %></td>
        <td><%= repair.duration %></td>
        <td><%= repair.price %></td>
        <td><%= repair.created_at.strftime("%d/%m/%Y") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_repair_path(repair), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      repair_path(repair),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger delete-record-button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
