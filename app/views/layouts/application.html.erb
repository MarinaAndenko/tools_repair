<!DOCTYPE html>
<html>
  <head>
    <title>ToolsRepair</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          </button>
          <a class="navbar-brand" href="#">Tools Repair</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Orders <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show Orders', orders_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'Create New', new_order_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Clients <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show Clients', clients_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'Create New', new_client_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tools <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show Tools', tools_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'Create New', new_tool_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Repairs <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show Repairs', repairs_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'Create New', new_repair_path %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <span class="navbar-text">
                Logged in as <strong><%= current_user.email %></strong>.
              </span>
              <li>
                <%= link_to 'Edit profile', edit_user_registration_path %>
              </li>
              <li>
                <%= link_to "Logout", destroy_user_session_path, method: :delete %>
              </li>
              <% if current_user.admin? %>
                <li>
                  <%= link_to "Add user", new_users_admin_path %>
                </li>
              <% end %>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class='content'>
      <%= yield %>
    </div>
  </body>
</html>
