<%= form_for(tool, html: {class: "form-horizontal"}) do |f| %>
  <% if tool.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tool.errors.count, "error") %> prohibited this tool from being saved:</h2>

      <ul>
      <% tool.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class:"control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :country, class:"control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :country, class: "form-control", placeholder: "Enter country" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :brand, class:"control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :brand, class: "form-control", placeholder: "Enter brand" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :type, class:"control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :type, class: "form-control", placeholder: "Enter type" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :production_year, class:"control-label col-sm-2" %>
    <div class='col-sm-10 year-text-field-width'>
      <%= f.text_field :production_year, class: "form-control", "data-provide": "datepicker", placeholder: "Enter production year" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save', class:"btn btn-default" %>
    </div>
  </div>
<% end %>
